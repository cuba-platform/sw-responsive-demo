<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Samara City"
        xmlns:swr="http://strangeway.org/xsd/responsive/sw-responsive.xsd"
        class="com.company.demo.web.dashboard.Dashboard"
        messagesPack="com.company.demo.web.screens">
    <layout>
        <swr:responsiveLayout width="100%"
                              height="100%"
                              stylename="demo-rl-scroll">
            <swr:row horizontalSpacing="true"
                     horizontalSpacingSize="SMALL">
                <swr:column>
                    <swr:content>
                        <groupBox caption="Population"
                                  height="150px"
                                  width="100%">
                            <label stylename="big-number"
                                   align="MIDDLE_CENTER"
                                   value="1,164,685"/>
                        </groupBox>
                    </swr:content>

                    <swr:display xs="12" sm="6" md="6" lg="3"/>
                </swr:column>
                <swr:column>
                    <swr:content>
                        <groupBox caption="Density"
                                  height="150px"
                                  width="100%">
                            <label stylename="big-number"
                                   align="MIDDLE_CENTER"
                                   value="2,151/km^2"/>
                        </groupBox>
                    </swr:content>

                    <swr:display xs="12" sm="6" md="6" lg="3"/>
                </swr:column>
                <swr:column>
                    <swr:content>
                        <groupBox caption="Area"
                                  height="150px"
                                  width="100%">
                            <label stylename="big-number"
                                   align="MIDDLE_CENTER"
                                   value="541.382 km^2"/>
                        </groupBox>
                    </swr:content>

                    <swr:display xs="12" sm="6" md="6" lg="3"/>
                </swr:column>
                <swr:column>
                    <swr:content>
                        <groupBox caption="Founded"
                                  height="150px"
                                  width="100%">
                            <label stylename="big-number"
                                   align="MIDDLE_CENTER"
                                   value="1586 year"/>
                        </groupBox>
                    </swr:content>

                    <swr:display xs="12" sm="6" md="6" lg="3"/>
                </swr:column>
            </swr:row>
            <swr:row stylename="map-row">
                <swr:column height="100%" stylename="map-col">
                    <swr:content>
                        <browserFrame width="100%"
                                      height="100%">
                            <url url="https://en.wikipedia.org/wiki/Samara#/media/File:Outline_Map_of_Samara_Oblast.svg"/>
                        </browserFrame>
                    </swr:content>

                    <swr:display xs="12" sm="12" md="12" lg="12"/>
                </swr:column>
            </swr:row>
        </swr:responsiveLayout>

    </layout>
</window>